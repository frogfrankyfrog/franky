
$(document).on("click",".btnOrder",function(b){b.preventDefault();var a=$("<form>",{action:"/shop/order",method:"post",target:"_self"}).append($("<input>",{name:"uuid",type:"hidden",value:$("#uuid").val()}));$.post("/ajax/shop/checkIfBuyBefore",{uuid:$("#uuid").val()},function(f){var d=JSON.parse(f);if(d.stat=="true"){var e=$("#isR18").val();var c=$("#isR18").data("uage");if(e=="1"){if(c=="0"){swal_function("很抱歉，您未滿 18 歲，無法兌換此商品。","warning");return}else{swal({title:"",text:"此為限制級商品，請問您是否已滿 18 歲？",type:"warning",showCancelButton:true,confirmButtonColor:"#DD6B55",confirmButtonText:"是 (繼續兌換)",cancelButtonText:"否 (取消兌換)",closeOnConfirm:true},function(g){if(!g){return false}else{a.appendTo("body").submit()}})}}else{a.appendTo("body").submit()}}else{if(d.stat=="no_login"){LoginLB("header");return}else{swal_function("您已兌換過此商品，每帳號只限兌換一次！","warning")}return}})});$(window).load(function(){$(window).trigger("resize")});var imgResizeTmr=false;$(window).resize(function(){if(imgResizeTmr){window.clearTimeout(imgResizeTmr)}imgResizeTmr=window.setTimeout(function(){$("#mmShopImg img").removeClass("landscap");var b=$("#mmShopImg").width();var a=$("#mmShopImg img").width();if(a>=b){$("#mmShopImg img").addClass("landscap")}$("#mmShopImg").css({visibility:"visible"})},50)});